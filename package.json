{
  "name": "home-management",
  "version": "1.0.0",
  "private": true,
  "description": "Home management app for Raspberry Pi with Google Calendar integration",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/backend & npm run dev --workspace=packages/frontend",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "build": "npm run build --workspaces --if-present",
    "build:backend": "npm run build --workspace=packages/backend",
    "build:frontend": "npm run build --workspace=packages/frontend",
    "db:migrate": "npm run migrate --workspace=packages/backend",
    "db:migrate:latest": "npm run migrate:latest --workspace=packages/backend",
    "db:migrate:rollback": "npm run migrate:rollback --workspace=packages/backend"
  },
  "keywords": [
    "home-management",
    "raspberry-pi",
    "calendar",
    "google-calendar"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/multer": "^2.0.0",
    "multer": "^2.0.2"
  }
}
